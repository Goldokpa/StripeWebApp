@model IEnumerable<StripeWebApp.Models.Product>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <form class="mt-auto" asp-action="CreateCheckout" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <input type="hidden" name="PriceId" value="@item.PriceId" />
                            <button class="btn btn-primary btn-block" type="submit">Checkout</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
